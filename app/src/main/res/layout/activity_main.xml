<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home_page_title"
                android:textAlignment="center"
                android:textSize="50sp"
                android:textAllCaps="false"
                android:textColor="@color/orangeColor"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0">

            <Button
                android:id="@+id/sportsButton"
                android:layout_width="180dp"
                android:layout_height="138dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/sports_button" />

            <Button
                android:id="@+id/musicButton"
                android:layout_width="180dp"
                android:layout_height="138dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/music_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/scienceButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/science_button" />

            <Button
                android:id="@+id/geographyButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/geography_button" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <Button
                android:id="@+id/foodButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/food_button" />

            <Button
                android:id="@+id/uiucButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/uiuc_button" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <Button
                android:id="@+id/moviesButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/home_page_button"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/movies_button" />

            <Button
                android:id="@+id/popCultureButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:background="@drawable/home_page_button"
                android:text="@string/math_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="30sp" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>