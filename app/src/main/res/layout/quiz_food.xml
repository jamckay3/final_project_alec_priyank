<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Trivia" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How well do you know food?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. What is the most common food allergy?" />

                <RadioGroup
                    android:id="@+id/foodQ1RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/foodQ1Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Milk" />

                    <RadioButton
                        android:id="@+id/foodQ1Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shellfish" />

                    <RadioButton
                        android:id="@+id/foodQ1Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peanuts" />

                    <RadioButton
                        android:id="@+id/foodQ1Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Soy" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. What is the national food of Mexico" />

                <RadioGroup
                    android:id="@+id/foodQ2RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/foodQ2Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taco" />

                    <RadioButton
                        android:id="@+id/foodQ2Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fajita" />

                    <RadioButton
                        android:id="@+id/foodQ2Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mole" />

                    <RadioButton
                        android:id="@+id/foodQ2Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tamale" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. What is the national food of France" />

                <RadioGroup
                    android:id="@+id/foodQ3RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/foodQ3Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Baguette" />

                    <RadioButton
                        android:id="@+id/foodQ3Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="White flags" />

                    <RadioButton
                        android:id="@+id/foodQ3Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pot-au-Feu" />

                    <RadioButton
                        android:id="@+id/foodQ3Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Croissant" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. What is the only US state that grows coffee beans?" />

                <RadioGroup
                    android:id="@+id/foodQ4RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/foodQ4Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Louisiana" />

                    <RadioButton
                        android:id="@+id/foodQ4Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hawaii" />

                    <RadioButton
                        android:id="@+id/foodQ4Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Idaho" />

                    <RadioButton
                        android:id="@+id/foodQ4Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wyoming" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/foodSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />

                <Button
                    android:id="@+id/foodBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>