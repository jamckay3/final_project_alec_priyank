<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sportQuizTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports Trivia" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How well do you know sports?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. According to the official FIFA rulebook, how long can a goalkeeper hold the ball?" />

                <RadioGroup
                    android:id="@+id/sportQ1RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="142dp">

                    <RadioButton
                        android:id="@+id/sportQ1Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6 seconds" />

                    <RadioButton
                        android:id="@+id/sportQ1Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8 seconds" />

                    <RadioButton
                        android:id="@+id/sportQ1Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 seconds" />

                    <RadioButton
                        android:id="@+id/sportQ1Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12 seconds" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Who is the most succesful athlete to ever compete in the Olympics (by medals)?" />

                <RadioGroup
                    android:id="@+id/sportQ2RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/sportQ2Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Usain Bolt" />

                    <RadioButton
                        android:id="@+id/sportQ2Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paavo Nurmi" />

                    <RadioButton
                        android:id="@+id/sportQ2Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mark Spitz" />

                    <RadioButton
                        android:id="@+id/sportQ2Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Michael Phelps" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. How heavy is a baseball?" />

                <RadioGroup
                    android:id="@+id/sportQ3RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/sportQ3Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="145g" />

                    <RadioButton
                        android:id="@+id/sportQ3Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200g" />

                    <RadioButton
                        android:id="@+id/sportQ3Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="400g" />

                    <RadioButton
                        android:id="@+id/sportQ3Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50g" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Who was the first player in NBA history to be elected league MVP by a unanimous vote?" />

                <RadioGroup
                    android:id="@+id/sportQ4RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/sportQ4Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kareem Abdul-Jabbar" />

                    <RadioButton
                        android:id="@+id/sportQ4Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stephen Curry" />

                    <RadioButton
                        android:id="@+id/sportQ4Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lebron James" />

                    <RadioButton
                        android:id="@+id/sportQ4Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Michael Jordan" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sportSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />

                <Button
                    android:id="@+id/sportBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>