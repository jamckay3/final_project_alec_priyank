<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science Trivia" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How well do you know science?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Which planet has the most moons?" />

                <RadioGroup
                    android:id="@+id/scienceQ1RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/scienceQ1Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jupiter" />

                    <RadioButton
                        android:id="@+id/scienceQ1Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neptune" />

                    <RadioButton
                        android:id="@+id/scienceQ1Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mars" />

                    <RadioButton
                        android:id="@+id/scienceQ1Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saturn" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. What is the rarest blood type?" />

                <RadioGroup
                    android:id="@+id/scienceQ2RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/scienceQ2Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A+" />

                    <RadioButton
                        android:id="@+id/scienceQ2Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B-" />

                    <RadioButton
                        android:id="@+id/scienceQ2Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AB-" />

                    <RadioButton
                        android:id="@+id/scienceQ2Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O+" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. What is the largest known animal?" />

                <RadioGroup
                    android:id="@+id/scienceQ3RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/scienceQ3Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Horse" />

                    <RadioButton
                        android:id="@+id/scienceQ3Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elephant" />

                    <RadioButton
                        android:id="@+id/scienceQ3Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blue Whale" />

                    <RadioButton
                        android:id="@+id/scienceQ3Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Mother" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Animals the eat plant and meat are called what?" />

                <RadioGroup
                    android:id="@+id/scienceQ4RadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/scienceQ4Wrong1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carnivores" />

                    <RadioButton
                        android:id="@+id/scienceQ4Wrong2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Herbivores" />

                    <RadioButton
                        android:id="@+id/scienceQ4Correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Omnivores" />

                    <RadioButton
                        android:id="@+id/scienceQ4Wrong3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vegans" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/scienceSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />

                <Button
                    android:id="@+id/scienceBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>